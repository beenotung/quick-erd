{
  "name": "quick-erd",
  "version": "1.0.7",
  "description": "quick and easy text-based ERD",
  "keywords": [
    "erd",
    "diagram",
    "offline",
    "local-first"
  ],
  "author": "Beeno Tung <aabbcc1241@yahoo.com.hk> (https://beeno-tung.surge.sh)",
  "license": "BSD-2-Clause",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "type": "module",
  "bin": {
    "pg-to-erd": "./cli/pg-to-erd.js",
    "sqlite-to-erd": "./cli/sqlite-to-erd.js",
    "erd-to-sqlite": "./cli/erd-to-sqlite.js",
    "erd-to-knex": "./cli/erd-to-knex.js"
  },
  "scripts": {
    "dev": "npm run type:module && snowpack dev",
    "migrate": "npm run type:commonjs && ts-node src/db/migrate.ts",
    "upload": "run-s clean build:client surge:all",
    "type:module": "node set-type.js module",
    "type:commonjs": "node set-type.js commonjs",
    "build:client": "npm run type:module && snowpack build",
    "surge:all": "run-s surge:erd surge:quick",
    "surge:erd": "surge build https://erd.surge.sh",
    "surge:quick": "surge build https://quick-erd.surge.sh",
    "prepare": "husky install",
    "clean": "rimraf dist build migrate.ts",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .ts --fix .",
    "format:prettier": "prettier --write .",
    "format:json": "format-json-cli",
    "build": "run-s clean tsc fix",
    "tsc": "run-p tsc:*",
    "tsc:cjs": "tsc -p tsconfig.cjs.json",
    "tsc:esm": "tsc -p tsconfig.esm.json",
    "fix": "fix-esm-import-path dist/esm",
    "test": "run-s format tsc mocha",
    "mocha": "ts-mocha \"{src,test}/**/*.spec.ts\"",
    "coverage": "nyc npm run mocha -- --reporter=progress",
    "report:update": "nyc --reporter=lcov npm run mocha -- --reporter=progress",
    "report:open": "open-cli coverage/lcov-report/index.html",
    "report": "run-s report:update report:open",
    "prepublishOnly": "run-s test build"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@types/better-sqlite3": "^7.4.1",
    "better-sqlite3": "^7.5.0",
    "dotenv": "^10.0.0",
    "knex": "^0.95.11",
    "pg": "^8.7.1"
  },
  "devDependencies": {
    "@snowpack/plugin-sass": "^1.4.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^8.0.0",
    "@types/node": "*",
    "@types/sinon": "^10.0.2",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "fix-esm-import-path": "^1.2.1",
    "format-json-cli": "^1.0.1",
    "husky": "^7.0.1",
    "mocha": "^8.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "open-cli": "^7.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "sass": "^1.37.0",
    "sinon": "^11.1.2",
    "snowpack": "^3.8.2",
    "ts-mocha": "^8.0.0",
    "ts-node": "^10.1.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5"
  }
}
