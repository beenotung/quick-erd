{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "outDir": "dist/cjs"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/client",
    "src/db/migrate.ts",
    "src/**/*.macro.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ]
}
